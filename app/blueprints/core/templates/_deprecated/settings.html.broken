{% extends 'base.html' %}
{% block title %}Settings ‚Ä¢ Ollama Manager{% endblock %}
{% block styles %}
{{ super() }}
<meta http-equiv="Cache-Control" content="no-cache, no-store, must-revalidate">
<meta http-equiv="Pragma" content="no-cache">
<meta http-equiv="Expires" content="0">
{% endblock %}
{% block content %}
<div style="width: 100%; max-width: 100%; overflow-x: hidden; min-height: 100%; display: flex; flex-direction: column; box-sizing: border-box;"
    x-data="settingsPage">

    <!-- Header -->
    <div class="px-4 sm:px-8 py-4 sm:py-6 border-b border-zinc-200 dark:border-zinc-800 flex-shrink-0">
        <h1 class="text-2xl sm:text-3xl font-bold text-zinc-900 dark:text-zinc-100"
            x-text="t('settings.title', 'Settings')"></h1>
    </div>

    <!-- Mobile Tabs (scrollable) -->
    <div
        class="md:hidden overflow-x-auto border-b border-zinc-200 dark:border-zinc-800 bg-zinc-50 dark:bg-zinc-900 flex-shrink-0">
        <div class="flex px-4 py-2 gap-1">
            <button @click="activeTab='general'"
                class="px-4 py-2 rounded-lg text-sm font-medium whitespace-nowrap transition-colors"
                :class="activeTab==='general' ? 'bg-blue-100 text-blue-600 dark:bg-blue-900/30 dark:text-blue-400' : 'text-zinc-600 dark:text-zinc-400'"
                x-text="t('settings.general', 'General')">
            </button>
            <button @click="activeTab='providers'; loadProviders()"
                class="px-4 py-2 rounded-lg text-sm font-medium whitespace-nowrap transition-colors"
                :class="activeTab==='providers' ? 'bg-emerald-100 text-emerald-600 dark:bg-emerald-900/30 dark:text-emerald-400' : 'text-zinc-600 dark:text-zinc-400'"
                x-text="t('settings.providers', 'Fournisseurs')">
            </button>
            <button @click="activeTab='shortcuts'"
                class="px-4 py-2 rounded-lg text-sm font-medium whitespace-nowrap transition-colors"
                :class="activeTab==='shortcuts' ? 'bg-blue-100 text-blue-600 dark:bg-blue-900/30 dark:text-blue-400' : 'text-zinc-600 dark:text-zinc-400'"
                x-text="t('settings.shortcuts', 'Shortcuts')">
            </button>
            <button @click="activeTab='rag'; loadRagConfig()"
                class="px-4 py-2 rounded-lg text-sm font-medium whitespace-nowrap transition-colors"
                :class="activeTab==='rag' ? 'bg-red-100 text-red-600 dark:bg-red-900/30 dark:text-red-400' : 'text-zinc-600 dark:text-zinc-400'"
                x-text="t('settings.rag', 'RAG')">
            </button>
            <button @click="activeTab='llm'; loadLlmConfig()"
                class="px-4 py-2 rounded-lg text-sm font-medium whitespace-nowrap transition-colors"
                :class="activeTab==='llm' ? 'bg-purple-100 text-purple-600 dark:bg-purple-900/30 dark:text-purple-400' : 'text-zinc-600 dark:text-zinc-400'"
                x-text="t('settings.llm', 'LLM')">
            </button>
            <button @click="activeTab='about'"
                class="px-4 py-2 rounded-lg text-sm font-medium whitespace-nowrap transition-colors"
                :class="activeTab==='about' ? 'bg-blue-100 text-blue-600 dark:bg-blue-900/30 dark:text-blue-400' : 'text-zinc-600 dark:text-zinc-400'"
                x-text="t('settings.about', 'About')">
            </button>

            <button @click="activeTab='websearch'; loadWebSearchConfig()"
                class="px-4 py-2 rounded-lg text-sm font-medium whitespace-nowrap transition-colors"
                :class="activeTab==='websearch' ? 'bg-green-100 text-green-600 dark:bg-green-900/30 dark:text-green-400' : 'text-zinc-600 dark:text-zinc-400'"
                x-text="t('settings.websearch', 'Web')">
            </button>
            <button @click="activeTab='textprompts'; loadTextPromptsConfig()"
                class="px-4 py-2 rounded-lg text-sm font-medium whitespace-nowrap transition-colors"
                :class="activeTab==='textprompts' ? 'bg-pink-100 text-pink-600 dark:bg-pink-900/30 dark:text-pink-400' : 'text-zinc-600 dark:text-zinc-400'"
                x-text="t('settings.textprompts', 'Prompts Textes')">
            </button>
        </div>
    </div>

    <div class="flex-1 flex overflow-hidden min-h-0">

        <!-- Desktop Settings Sidebar (hidden on mobile) -->
        <aside
            class="hidden md:block w-64 flex-shrink-0 overflow-y-auto border-r border-zinc-200 dark:border-zinc-800 py-6 px-4 space-y-1">
            <button @click="activeTab='general'"
                class="w-full flex items-center gap-3 px-3 py-2 rounded-lg text-sm font-medium transition-colors"
                :class="activeTab==='general' ? 'bg-blue-50 text-blue-600 dark:bg-blue-900/20 dark:text-blue-400' : 'text-zinc-600 dark:text-zinc-400 hover:bg-zinc-50 dark:hover:bg-zinc-800/50'">
                <svg class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                        d="M10.325 4.317c.426-1.756 2.924-1.756 3.35 0a1.724 1.724 0 002.573 1.066c1.543-.94 3.31.826 2.37 2.37a1.724 1.724 0 001.065 2.572c1.756.426 1.756 2.924 0 3.35a1.724 1.724 0 00-1.066 2.573c.94 1.543-.826 3.31-2.37 2.37a1.724 1.724 0 00-2.572 1.065c-.426 1.756-2.924 1.756-3.35 0a1.724 1.724 0 00-2.573-1.066c-1.543.94-3.31-.826-2.37-2.37a1.724 1.724 0 00-1.065-2.572c-1.756-.426-1.756-2.924 0-3.35a1.724 1.724 0 001.066-2.573c-.94-1.543.826-3.31 2.37-2.37.996.608 2.296.07 2.572-1.065z" />
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                        d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" />
                </svg>
                General
            </button>

            <button @click="activeTab='providers'; loadProviders()"
                class="w-full flex items-center gap-3 px-3 py-2 rounded-lg text-sm font-medium transition-colors"
                :class="activeTab==='providers' ? 'bg-emerald-50 text-emerald-600 dark:bg-emerald-900/20 dark:text-emerald-400' : 'text-zinc-600 dark:text-zinc-400 hover:bg-zinc-50 dark:hover:bg-zinc-800/50'">
                <svg class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                        d="M3 15a4 4 0 004 4h9a5 5 0 10-.1-9.999 5.002 5.002 0 10-9.78 2.096A4.001 4.001 0 003 15z" />
                </svg>
                Fournisseurs LLM
            </button>

            <button @click="activeTab='shortcuts'"
                class="w-full flex items-center gap-3 px-3 py-2 rounded-lg text-sm font-medium transition-colors"
                :class="activeTab==='shortcuts' ? 'bg-blue-50 text-blue-600 dark:bg-blue-900/20 dark:text-blue-400' : 'text-zinc-600 dark:text-zinc-400 hover:bg-zinc-50 dark:hover:bg-zinc-800/50'">
                <svg class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                        d="M12 3v1m0 16v1m9-9h-1M4 12H3m15.364 6.364l-.707-.707M6.343 6.343l-.707-.707m12.728 0l-.707.707M6.343 17.657l-.707.707M16 12a4 4 0 11-8 0 4 4 0 018 0z" />
                </svg>
                Shortcuts
            </button>

            <button @click="activeTab='rag'; loadRagConfig()"
                class="w-full flex items-center gap-3 px-3 py-2 rounded-lg text-sm font-medium transition-colors"
                :class="activeTab==='rag' ? 'bg-red-50 text-red-600 dark:bg-red-900/20 dark:text-red-400' : 'text-zinc-600 dark:text-zinc-400 hover:bg-zinc-50 dark:hover:bg-zinc-800/50'">
                <svg class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                        d="M7 21h10a2 2 0 002-2V9.414a1 1 0 00-.293-.707l-5.414-5.414A1 1 0 0012.586 3H7a2 2 0 00-2 2v14a2 2 0 002 2z" />
                </svg>
                RAG / Documents
            </button>

            <button @click="activeTab='about'"
                class="w-full flex items-center gap-3 px-3 py-2 rounded-lg text-sm font-medium transition-colors"
                :class="activeTab==='about' ? 'bg-blue-50 text-blue-600 dark:bg-blue-900/20 dark:text-blue-400' : 'text-zinc-600 dark:text-zinc-400 hover:bg-zinc-50 dark:hover:bg-zinc-800/50'">
                <svg class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                        d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
                </svg>
                About
            </button>

            <button @click="activeTab='llm'; loadLlmConfig()"
                class="w-full flex items-center gap-3 px-3 py-2 rounded-lg text-sm font-medium transition-colors"
                :class="activeTab==='llm' ? 'bg-purple-50 text-purple-600 dark:bg-purple-900/20 dark:text-purple-400' : 'text-zinc-600 dark:text-zinc-400 hover:bg-zinc-50 dark:hover:bg-zinc-800/50'">
                <svg class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                        d="M9.663 17h4.673M12 3v1m6.364 1.636l-.707.707M21 12h-1M4 12H3m3.343-5.657l-.707-.707m2.828 9.9a5 5 0 117.072 0l-.548.547A3.374 3.374 0 0014 18.469V19a2 2 0 11-4 0v-.531c0-.895-.356-1.754-.988-2.386l-.548-.547z" />
                </svg>
                LLM
            </button>

            <div class="pt-4 mt-2 border-t border-zinc-100 dark:border-zinc-800/50">

                <button @click="activeTab='websearch'; loadWebSearchConfig()"
                    class="w-full flex items-center gap-3 px-3 py-2 rounded-lg text-sm font-medium transition-colors mt-1"
                    :class="activeTab==='websearch' ? 'bg-green-50 text-green-600 dark:bg-green-900/20 dark:text-green-400' : 'text-zinc-600 dark:text-zinc-400 hover:bg-zinc-50 dark:hover:bg-zinc-800/50'">
                    <svg class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                            d="M21 12a9 9 0 01-9 9m9-9a9 9 0 00-9-9m9 9H3m9 9a9 9 0 01-9-9m9 9c1.657 0 3-4.03 3-9s-1.343-9-3-9m0 18c-1.657 0-3-4.03-3-9s1.343-9 3-9m-9 9a9 9 0 019-9" />
                    </svg>
                    Recherche Web
                </button>

                <button @click="activeTab='textprompts'; loadTextPromptsConfig()"
                    class="w-full flex items-center gap-3 px-3 py-2 rounded-lg text-sm font-medium transition-colors mt-1"
                    :class="activeTab==='textprompts' ? 'bg-pink-50 text-pink-600 dark:bg-pink-900/20 dark:text-pink-400' : 'text-zinc-600 dark:text-zinc-400 hover:bg-zinc-50 dark:hover:bg-zinc-800/50'">
                    <svg class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                            d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z" />
                    </svg>
                    Prompts Textes
                </button>
            </div>
        </aside>

        <!-- Content Area -->
        <div class="flex-1 overflow-y-auto p-4 sm:p-6 lg:p-8 w-full lg:max-w-4xl mx-auto">

            <!-- General Tab -->
            <div x-show="activeTab === 'general'">
                <!-- Appearance Section -->
                <div class="mb-10">
                    <h2 class="text-base font-semibold text-zinc-900 dark:text-zinc-100 mb-1"
                        x-text="t('settings.appearance', 'Appearance')"></h2>
                    <p class="text-sm text-zinc-500 dark:text-zinc-400 mb-6"
                        x-text="t('settings.appearanceDesc', 'Choose how OllaMan looks on your device')"></p>

                    <div class="space-y-4">
                        <!-- Light -->
                        <label class="block relative group cursor-pointer">
                            <input type="radio" name="theme" value="light" x-model="theme"
                                @change="updateTheme('light')" class="peer sr-only">
                            <div
                                class="p-4 rounded-xl border-2 border-zinc-200 dark:border-zinc-700 bg-white dark:bg-zinc-800 peer-checked:border-blue-500 peer-checked:bg-blue-50/50 dark:peer-checked:bg-blue-900/20 transition-all flex items-center gap-4 hover:border-blue-500/50">
                                <div
                                    class="w-10 h-10 rounded-full bg-orange-100 dark:bg-orange-900/30 text-orange-500 flex items-center justify-center">
                                    <svg class="w-6 h-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                            d="M12 3v1m0 16v1m9-9h-1M4 12H3m15.364 6.364l-.707-.707M6.343 6.343l-.707-.707m12.728 0l-.707.707M6.343 17.657l-.707.707M16 12a4 4 0 11-8 0 4 4 0 018 0z" />
                                    </svg>
                                </div>
                                <div>
                                    <div class="font-semibold text-zinc-900 dark:text-zinc-100"
                                        x-text="t('settings.theme.light', 'Light')"></div>
                                    <div class="text-sm text-zinc-500 dark:text-zinc-400"
                                        x-text="t('settings.theme.lightDesc', 'Always use light theme')"></div>
                                </div>
                                <div class="ml-auto">
                                    <div
                                        class="w-5 h-5 rounded-full border-2 border-zinc-300 dark:border-zinc-600 peer-checked:border-blue-500 peer-checked:bg-blue-500 relative">
                                        <div
                                            class="absolute inset-0 m-auto w-2 h-2 rounded-full bg-white opacity-0 peer-checked:opacity-100">
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </label>

                        <!-- Dark -->
                        <label class="block relative group cursor-pointer">
                            <input type="radio" name="theme" value="dark" x-model="theme" @change="updateTheme('dark')"
                                class="peer sr-only">
                            <div
                                class="p-4 rounded-xl border-2 border-zinc-200 dark:border-zinc-700 bg-white dark:bg-zinc-800 peer-checked:border-blue-500 peer-checked:bg-blue-50/50 dark:peer-checked:bg-blue-900/20 transition-all flex items-center gap-4 hover:border-blue-500/50">
                                <div
                                    class="w-10 h-10 rounded-full bg-blue-100 dark:bg-blue-900/30 text-blue-500 flex items-center justify-center">
                                    <svg class="w-6 h-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                            d="M20.354 15.354A9 9 0 018.646 3.646 9.003 9.003 0 0012 21a9.003 9.003 0 008.354-5.646z" />
                                    </svg>
                                </div>
                                <div>
                                    <div class="font-semibold text-zinc-900 dark:text-zinc-100"
                                        x-text="t('settings.theme.dark', 'Dark')"></div>
                                    <div class="text-sm text-zinc-500 dark:text-zinc-400"
                                        x-text="t('settings.theme.darkDesc', 'Always use dark theme')"></div>
                                </div>
                                <div class="ml-auto">
                                    <div
                                        class="w-5 h-5 rounded-full border-2 border-zinc-300 dark:border-zinc-600 peer-checked:border-blue-500 peer-checked:bg-blue-500 relative">
                                        <div
                                            class="absolute inset-0 m-auto w-2 h-2 rounded-full bg-white opacity-0 peer-checked:opacity-100">
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </label>

                        <!-- System -->
                        <label class="block relative group cursor-pointer">
                            <input type="radio" name="theme" value="system" x-model="theme"
                                @change="updateTheme('system')" class="peer sr-only">
                            <div
                                class="p-4 rounded-xl border-2 border-zinc-200 dark:border-zinc-700 bg-white dark:bg-zinc-800 peer-checked:border-blue-500 peer-checked:bg-blue-50/50 dark:peer-checked:bg-blue-900/20 transition-all flex items-center gap-4 hover:border-blue-500/50">
                                <div
                                    class="w-10 h-10 rounded-full bg-zinc-100 dark:bg-zinc-800 text-zinc-500 flex items-center justify-center">
                                    <svg class="w-6 h-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                            d="M9.75 17L9 20l-1 1h8l-1-1-.75-3M3 13h18M5 17h14a2 2 0 002-2V5a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
                                    </svg>
                                </div>
                                <div>
                                    <div class="font-semibold text-zinc-900 dark:text-zinc-100"
                                        x-text="t('settings.theme.system', 'System')"></div>
                                    <div class="text-sm text-zinc-500 dark:text-zinc-400"
                                        x-text="t('settings.theme.systemDesc', 'Follow system preferences')"></div>
                                </div>
                                <div class="ml-auto">
                                    <div
                                        class="w-5 h-5 rounded-full border-2 border-zinc-300 dark:border-zinc-600 peer-checked:border-blue-500 peer-checked:bg-blue-500 relative">
                                        <div
                                            class="absolute inset-0 m-auto w-2 h-2 rounded-full bg-white opacity-0 peer-checked:opacity-100">
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </label>
                    </div>
                </div>

                <!-- Language Section -->
                <div class="mb-10" x-data="{ 
                    currentLocale: localStorage.getItem('locale') || 'fr',
                    locales: [
                        { code: 'fr', name: 'Fran√ßais', flag: 'üá´üá∑' },
                        { code: 'en', name: 'English', flag: 'üá¨üáß' }
                    ],
                    setLocale(code) {
                        if (this.currentLocale === code) return;
                        this.currentLocale = code;
                        localStorage.setItem('locale', code);
                        // Reload page to apply translations everywhere
                        window.location.reload();
                    }
                }">
                    <h2 class="text-base font-semibold text-zinc-900 dark:text-zinc-100 mb-1">
                        <span x-text="t('settings.language', 'Langue')"></span>
                    </h2>
                    <p class="text-sm text-zinc-500 dark:text-zinc-400 mb-6">
                        <span x-text="t('settings.languageDesc', 'Choisissez la langue')"></span>
                    </p>

                    <div class="space-y-4">
                        <template x-for="loc in locales" :key="loc.code">
                            <div class="block relative group cursor-pointer" @click="setLocale(loc.code)">
                                <div class="p-4 rounded-xl border-2 border-zinc-200 dark:border-zinc-700 bg-white dark:bg-zinc-800 transition-all flex items-center gap-4 hover:border-blue-500/50"
                                    :class="currentLocale === loc.code ? 'border-blue-500 bg-blue-50/50 dark:bg-blue-900/20' : ''">
                                    <div
                                        class="w-10 h-10 rounded-full bg-zinc-100 dark:bg-zinc-800 flex items-center justify-center text-2xl">
                                        <span x-text="loc.flag"></span>
                                    </div>
                                    <div>
                                        <div class="font-semibold text-zinc-900 dark:text-zinc-100" x-text="loc.name">
                                        </div>
                                        <div class="text-sm text-zinc-500 dark:text-zinc-400"
                                            x-text="loc.code === 'fr' ? 'Interface en fran√ßais' : 'English interface'">
                                        </div>
                                    </div>
                                    <div class="ml-auto">
                                        <div class="w-5 h-5 rounded-full border-2 border-zinc-300 dark:border-zinc-600 peer-checked:border-blue-500 transition-colors"
                                            :class="currentLocale === loc.code ? 'border-blue-500 bg-blue-500' : ''">
                                            <svg x-show="currentLocale === loc.code"
                                                class="w-full h-full text-white p-0.5" fill="none" viewBox="0 0 24 24"
                                                stroke="currentColor">
                                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="3"
                                                    d="M5 13l4 4L19 7" />
                                            </svg>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </template>
                    </div>
                </div>
            </div>

            <!-- LLM Providers Tab -->
            <div x-show="activeTab === 'providers'">
                <div class="mb-10">
                    <h2 class="text-base font-semibold text-zinc-900 dark:text-zinc-100 mb-1"
                        x-text="t('providers.title', 'Fournisseurs LLM')"></h2>
                    <p class="text-sm text-zinc-500 dark:text-zinc-400 mb-6"
                        x-text="t('providers.desc', 'G√©rez vos connexions aux diff√©rents fournisseurs')"></p>

                    <!-- Migration Button (if old servers exist) -->
                    <div x-show="providers.length === 0" class="mb-6">
                        <button @click="migrateFromServers()"
                            class="text-sm text-blue-600 hover:text-blue-700 dark:text-blue-400 dark:hover:text-blue-300 underline"
                            x-text="t('providers.migrate', 'Migrer les serveurs Ollama existants')">
                        </button>
                    </div>

                    <!-- Provider List -->
                    <div class="space-y-3 mb-8">
                        <template x-for="provider in providers" :key="provider.id">
                            <div class="p-4 rounded-xl border flex flex-col sm:flex-row sm:items-center sm:justify-between gap-4 transition-all"
                                :class="provider.id === activeProviderId ? 'bg-emerald-50 dark:bg-emerald-900/10 border-emerald-200 dark:border-emerald-800' : 'bg-white dark:bg-zinc-800 border-zinc-200 dark:border-zinc-700'">

                                <div class="flex-1 min-w-0 cursor-pointer" @click="setActiveProvider(provider.id)">
                                    <div class="flex items-center gap-2 mb-1 flex-wrap">
                                        <!-- Provider Type Badge -->
                                        <span class="px-2 py-0.5 rounded-full text-xs font-bold" :class="{
                                                'bg-blue-100 text-blue-600 dark:bg-blue-900/30 dark:text-blue-400': provider.type === 'ollama',
                                                'bg-teal-100 text-teal-600 dark:bg-teal-900/30 dark:text-teal-400': provider.type === 'lmstudio',
                                                'bg-emerald-100 text-emerald-600 dark:bg-emerald-900/30 dark:text-emerald-400': provider.type === 'openai',
                                                'bg-amber-100 text-amber-600 dark:bg-amber-900/30 dark:text-amber-400': provider.type === 'anthropic',
                                                'bg-purple-100 text-purple-600 dark:bg-purple-900/30 dark:text-purple-400': provider.type === 'gemini',
                                                'bg-orange-100 text-orange-600 dark:bg-orange-900/30 dark:text-orange-400': provider.type === 'mistral',
                                                'bg-cyan-100 text-cyan-600 dark:bg-cyan-900/30 dark:text-cyan-400': provider.type === 'groq',
                                                'bg-pink-100 text-pink-600 dark:bg-pink-900/30 dark:text-pink-400': provider.type === 'openrouter',
                                                'bg-indigo-100 text-indigo-600 dark:bg-indigo-900/30 dark:text-indigo-400': provider.type === 'deepseek',
                                                'bg-rose-100 text-rose-600 dark:bg-rose-900/30 dark:text-rose-400': provider.type === 'qwen',
