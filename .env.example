# ===========================================
# Nova - Environment Configuration
# ===========================================
# Copy this file to .env and configure your settings

# Flask Configuration
SECRET_KEY=change-me-to-a-secure-random-string
FLASK_ENV=production

# ===========================================
# DATABASE & CACHE
# ===========================================

# Redis (for RQ jobs, cache, and SSE pub/sub)
REDIS_URL=redis://redis:6379/0

# PostgreSQL (for chat history and RAG)
POSTGRES_URL=postgresql://ollama:ollama_rag@postgres:5432/ollama_rag

# Qdrant (for advanced RAG hybrid search)
QDRANT_URL=http://qdrant:6333

# Cache configuration
CACHE_TYPE=RedisCache
CACHE_DEFAULT_TIMEOUT=300

# ===========================================
# OLLAMA CONFIGURATION
# ===========================================

# Ollama API base URL
# Use http://host.docker.internal:11434 for Docker on Mac/Windows
# Use http://localhost:11434 for native Linux or if Ollama is on host
OLLAMA_BASE_URL=http://host.docker.internal:11434

# ===========================================
# ADMIN ACCOUNT
# ===========================================

# Initial admin credentials (created on first startup)
ADMIN_USERNAME=admin
ADMIN_PASSWORD=change-me

# ===========================================
# TIMEOUTS & PERFORMANCE
# ===========================================

# HTTP Timeouts (seconds)
HTTP_CONNECT_TIMEOUT=30
HTTP_READ_TIMEOUT=600

# Logging level (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=INFO

# ===========================================
# RAG CONFIGURATION
# ===========================================

# Storage directories
MODELS_DIR=/app/models
RAG_UPLOADS_DIR=/app/rag_uploads

# RAG chunking parameters
RAG_CHUNK_SIZE=500
RAG_CHUNK_OVERLAP=50
RAG_TOP_K=5

# ===========================================
# SECURITY
# ===========================================

# LLM Providers - Encryption key for API keys (auto-generated if empty)
# Generate with: python -c "from cryptography.fernet import Fernet; print(Fernet.generate_key().decode())"
LLM_ENCRYPTION_KEY=

# ===========================================
# OPTIONAL FEATURES
# ===========================================

# HuggingFace token for private models (optional)
# HF_TOKEN=your_hf_token_here

# ===========================================
# MAIL INTEGRATION (Optional)
# ===========================================

# Enable/Disable mail feature globally
MAIL_ENABLED=false

# Gmail OAuth - Get credentials from: https://console.cloud.google.com/apis/credentials
GMAIL_CLIENT_ID=
GMAIL_CLIENT_SECRET=

# Outlook OAuth - Get credentials from: https://portal.azure.com/#blade/Microsoft_AAD_RegisteredApps
OUTLOOK_CLIENT_ID=
OUTLOOK_CLIENT_SECRET=
